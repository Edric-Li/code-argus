{
  "name": "code-argus",
  "version": "0.1.0",
  "description": "AI-powered automated code review CLI tool using Claude Agent SDK with multi-agent orchestration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "argus": "./dist/index.js",
    "code-argus": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/code-argus.git",
    "directory": "core"
  },
  "keywords": [
    "code-review",
    "ai",
    "claude",
    "llm",
    "git",
    "diff",
    "static-analysis",
    "multi-agent",
    "cli"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "exec": "tsx",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/review/prompts/templates dist/review/prompts/",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.50",
    "@anthropic-ai/sdk": "^0.70.1",
    "dotenv": "^17.2.3"
  }
}
